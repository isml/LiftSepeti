@model IEnumerable<LiftSepeti.Models.Entity.siparisTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<title>Ana Sayfa</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .w3-container {
            width: 1000px;
            height: 300px;
        }

        .w3-panel w3-card w3-white {
            width: 900px;
            margin: auto;
        }

        .sola-kaydir {
            float: left;
            padding: 0 0 0 0;
        }

        .paragraf_d {
            padding-top: 50px;
            padding-right: 30px;
            padding-bottom: 50px;
            padding-left: 80px;
        }


        body {
            background-image: url('https://cutewallpaper.org/21/truck-wallpaper-hd/Volvo-Truck-Wallpaper-67+-Group-Wallpapers.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>

</head>
<div>
    <body>

        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Lift Sepeti</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Ana Sayfa</a></li>
                    <li><a href="#">Sepet</a></li>
                    <li><a href="#">Mağazam</a></li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="	glyphicon glyphicon-user"></span> SEPET</a></li>
                </ul>
            </div>
        </nav>
        <br />
        <br />
        <br />

        <div style="float:left">
            @foreach (var lft in Model)
            {

                <div class="w3-container">


                    <div class="w3-panel w3-card w3-white">
                        <img src="@lft.liftTable.resim" alt="Card image cap" width="700px" height="250px" class="sola-kaydir">
                        <br />
                        <div class="paragraf_d">
                            <p>Model Türü : @lft.liftTable.modelTable.ad</p>
                            <p>Model Ebatı : @lft.liftTable.modelTable.ebat</p>
                            <p>Lift Fiyatı : @lft.liftTable.fiyat TL</p>
                            <p>Bakım Periyodu : @lft.liftTable.bakimperiyot ay </p>
                            <a href="/bayisepet/delete/@lft.id" class="btn btn-info">Sepetten Çıkar</a>

                        </div>

                    </div>
                </div>
            }
        </div>

        <div style="float:left">

            <div>
                <div class="w3-panel w3-card w3-white">
                    <div class="card-body">
                        <h4 class="card-title">Sepet Tutarı</h4>
                        @{
                            double toplamtutar = 0.0;
                        }
                        @foreach (var lft in Model)
                        {


                            <p class="card-text">1x @lft.liftTable.modelTable.ad ===========>@lft.liftTable.fiyat TL</p>


                            toplamtutar += lft.liftTable.fiyat;

                        }
                        *
                        <br />
                        *
                        <br />
                        *
                        @{
                            string odemeyontemi = "";
                        }
                        <p class="card-text">Toplam  ===========>@toplamtutar TL </p>

                        <form action="/bayisepet/ode">



                            <label for="odemeyontemi">Ödeme Yöntemi Seçiniz:</label>
                            <select id="odemeyontemi" name="odemeyontemi">

                                <option value="KrediKartı">Kredi Kartı</option>
                                <option value="Nakit">Nakit</option>
                                <option value="Çek">Çek</option>
                            </select>
                            <input type="submit" value="Ödeme Yap">
                        </form>

                        <div style="padding-left:60%"><a href="/bayisepet/ode?bayiid=@ViewBag.bayiid&odemeyontemi=@odemeyontemi" class="btn btn-success">Ödeme Yap</a></div>
                    </div>
                </div>
            </div>
        </div>


    </body>
</div>
</html>
