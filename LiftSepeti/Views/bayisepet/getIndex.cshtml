@model IEnumerable<LiftSepeti.Models.Entity.siparisTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<title>Ana Sayfa</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .w3-container {
            width: 1000px;
            height: 300px;
        }

        .w3-panel w3-card w3-white {
            width: 900px;
            margin: auto;
        }

        .sola-kaydir {
            float: left;
            padding: 0 0 0 0;
        }

        .paragraf_d {
            padding-top: 50px;
            padding-right: 30px;
            padding-bottom: 50px;
            padding-left: 80px;
        }


        body {
            background-image: url('https://cutewallpaper.org/21/truck-wallpaper-hd/Volvo-Truck-Wallpaper-67+-Group-Wallpapers.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
    <script type="text/javascript">
        function MyFunction() {
            alert('Message');
            return;
        }


    </script>

</head>
<div>
    <body>

        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Lift Sepeti</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/bayianasayfa/Index?bayiid=@ViewBag.bayiid">Ana Sayfa</a></li>
                    <li><a href="/bayisepet/getIndex?bayiid=@ViewBag.bayiid">Sepet</a></li>
                    <li><a href="/bayimagaza/Index?bayiid=@ViewBag.bayiid">Mağazam</a></li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="	glyphicon glyphicon-user"></span> @ViewBag.bayiid</a></li>
                </ul>
            </div>
        </nav>
        <br />
        <br />
        <br />

        <div style="float:left">
            @foreach (var lft in Model)
            {

                <div class="w3-container">


                    <div class="w3-panel w3-card w3-white">
                        <img src="@lft.liftTable.resim" alt="Card image cap" width="700px" height="250px" class="sola-kaydir">
                        <br />
                        <div class="paragraf_d">
                            <p>Model Türü : @lft.liftTable.modelTable.ad</p>
                            <p>Model Ebatı : @lft.liftTable.modelTable.ebat</p>
                            <p>Lift Fiyatı : @lft.liftTable.fiyat TL</p>
                            <p>Bakım Periyodu : @lft.liftTable.bakimperiyot ay </p>
                            <a href="/bayisepet/sil?bayiid=@lft.bayiTable.id&liftid=@lft.id" class="btn btn-info">Sepetten Çıkar</a>

                        </div>

                    </div>
                </div>
            }
        </div>

        <div style="float:left">

            <div>
                <div class="w3-panel w3-card w3-white">
                    <div class="card-body">
                        <h4 class="card-title">Sepet Tutarı</h4>
                        @{
                            double toplamtutar = 0.0;
                        }
                        @foreach (var lft in Model)
                        {


                            <p class="card-text">1x @lft.liftTable.modelTable.ad ===========>@lft.liftTable.fiyat TL</p>


                            toplamtutar += lft.liftTable.fiyat;

                        }
                        *
                        <br />
                        *
                        <br />
                        *
                        @{
                            string odemeyontemi = "";

                        }
                        <p class="card-text">Toplam  ===========>@toplamtutar TL </p>


                        <form method="post" action="@Url.Action("ode", "bayisepet", new {bayiid = @ViewBag.bayiid})">

                            <label for="odeme">Ödeme yöntemi</label><br>
                            <select class="form-control" id="odemeyontemi" name="odemeyontemi">

                                <option value=1>Nakit</option>
                                <option value=2>Kredi Kartı</option>
                                <option value=3>Çek</option>
                            </select>
                            <br />
                            <br />

                            <input class="btn-success" type="submit" value="Ödeme Yap">
                            <br />
                            <br />

                        </form>

                    </div>
                </div>
            </div>
        </div>


    </body>
</div>
</html>
