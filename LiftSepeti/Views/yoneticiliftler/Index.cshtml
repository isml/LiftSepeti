@model IEnumerable<LiftSepeti.Models.Entity.liftTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liftler</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="~/CSS/table.css" rel="stylesheet" />
    <style>
        .ana-div {
            padding-left: 300px;
            padding-right: 20px;
        }

        .div {
            float: left;
            display: inline-block;
            height: 400px;
            width: 300px;
            margin: 100px;
            color: #000;
        }
    </style>


</head>

<nav class="navbar navbar-expand-sm bg-light justify-content-center">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" style=" color:black" href="/yoneticiliftler/Create"><h2> Yeni Lift Modeli Ekle </h2></a>
        </li>
    </ul>
</nav>

<body>


    @foreach (var item in Model)
    {

        <div class="ana-div">

            <div class=" div">
                <!-- <h2>Lift</h2>
                <p>Image at the top (card-img-top):</p>-->
                <div class="card" style="width:18rem">
                    <img class="card-img-top" src=@Html.DisplayFor(modelItem => item.resim) alt="Card image" style= width="600px" height="300px" color: black>
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.modelTable.ad)</h4>
                        <p class="card-text">
                            Adet: @Html.DisplayFor(modelItem => item.adet)<br>
                            Fiyat: @Html.DisplayFor(modelItem => item.fiyat)<br>
                            Bakım Periyodu: @Html.DisplayFor(modelItem => item.bakimperiyot)
                        </p>
                        <a href="/yoneticiliftler/Edit/@item.id" class="btn btn-warning">Düzenle</a>

                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Sil</button>
                        <div class="modal fade" id="myModal">
                            <div class="modal-dialog">
                                <div class="modal-content">


                                    <div class="modal-header">
                                        <h4 class="modal-title"> @Html.DisplayFor(modelItem => item.id) Bu lift modelini silmek istediğinize emin misiniz?</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        
                                    </div>



                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">İptal</button>
                                        <a href="/yoneticiliftler/Sil/@item.id" class="btn btn-danger">Sil</a>
                                    </div>

                                </div>
                            </div>
                        </div>


                        
                    </div>
                </div>



            </div>

        </div>


    }

</body>
</html>
