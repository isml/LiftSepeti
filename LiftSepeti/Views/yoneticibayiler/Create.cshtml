@model LiftSepeti.Models.Entity.bayiTable

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bayi Ekle</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h2 style="margin-left:650px"> BAYİ EKLE</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <!-- @Html.LabelFor(model => model.ulke, htmlAttributes: new { @class = "control-label col-md-2" })-->
            <div style="margin-left:20px"> <b>ÜLKE</b></div>
            <p></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ulke, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ulke, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="margin-left:20px"> <b>ŞEHİR</b></div>
            <p></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.sehir, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sehir, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="margin-left:20px"> <b>BAYİ ADI</b></div>
            <p></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.bayiad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.bayiad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="margin-left:20px"> <b>BAYİ ŞİFRESİ</b></div>
            <p></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.sifre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sifre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div style="margin-left:20px"> <b>BAYİ ADRESİ</b></div>
            <p></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.adres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.adres, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left:600px">
            <div class="col-md-offset-2 col-md-10 " >
                <input type="submit" value="Ekle" class="btn btn-success" />
                <a href="/yoneticibayiler/Index" class="btn btn-info">Listeye Geri Dön</a>

            </div>
        </div>
    </div>
    }
    
    
</body>
</html>
