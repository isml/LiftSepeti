@model LiftSepeti.Models.Entity.siparisTable

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Siparişi Düzenle</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        h4 {
            text-align: center;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
    <div class="form-check">
        <br />
        <h2 style="margin-left:600px">SİPARİŞİ DÜZENLE</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

    <div class="form-group">
        <div style="margin-left:20px"> <b>BAYİ ADI</b></div>
        <p></p>
        <div class="col-md-10">
            <!-- <input type="text" value="@Html.DisplayFor(model=>model.bayiTable.bayiad)" readonly class="form-control" id=@Html.DisplayFor(model=>model.bayiTable.bayiad)  name="@Html.DisplayFor(model=>model.bayiTable.bayiad)">-->
            @Html.DropDownList("bayiid", null, htmlAttributes: new { @class = "form-control" })
            <!--YARIN DEVAM ET BURAYA. ÜSTTEKİ DURUNCA KAYDA BASTIĞINDA 0 oluyor o da hataya düşürüyor.-->
        </div>
    </div>
        

    <div class="form-group">
        <div style="margin-left:20px"> <b>LİFT KODU</b></div>
        <p></p>
        <div class="col-md-10">
          
            @Html.DropDownList("liftid", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.liftid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div style="margin-left:20px"> <b>DURUM</b></div>
        <p></p>
        <div class="col-md-10">
            @Html.DropDownList("durumid", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.durumid, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div style="margin-left:20px"> <b>TARİH</b></div>
            <p></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tarih, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tarih, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="margin-left:20px"> <b>ALIM MİKTARI</b></div>
            <p></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.adet, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.adet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="margin-left:20px"> <b>ÖDEME YÖNTEMİ</b></div>
            <p></p>
            <div class="col-md-10">
                @Html.DropDownList("odemeyontemiid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.odemeyontemiid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left:600px">
            <div class="col-md-offset-10 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a href="/yoneticisiparisler/Index" class="btn btn-info">Listeye Geri Dön</a>
            </div>
        </div>
    </div>
    }
    
    
</body>
</html>
