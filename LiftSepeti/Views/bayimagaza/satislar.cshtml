@model IEnumerable<LiftSepeti.Models.musterisiparisModel>
@using LiftSepeti.Models.Entity;
<!DOCTYPE html>

<html>
<title>Ana Sayfa</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        div.w3-container {
            width: 1200px;
            height: 450px;
        }

        .w3-panel w3-card w3-white {
            width: 900px;
            margin: auto;
        }

        .sola-kaydir {
            float: left;
            padding: 0 0 0 0;
        }

        .paragraf_d {
            padding-top: 50px;
            padding-right: 30px;
            padding-bottom: 50px;
            padding-left: 80px;
        }


        body {
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            background-color: whitesmoke;
        }

        ridge {
            border-style: ridge;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Lift Sepeti</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/bayianasayfa/Index?bayiid=@ViewBag.bayiid">Ana Sayfa</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><span class="	glyphicon glyphicon-user"></span> </a></li>
            </ul>
        </div>
    </nav>
    <br />
    <br />
    <br />
    <div style="float:left">
        @foreach (var lft in Model)
        {
            if (lft.bayiid == ViewBag.bayiid)
            {

                <div class="w3-container">

                    <div class="w3-panel w3-card w3-white" style="  border-bottom-right-radius: 25px; border-top-right-radius: 25px; border-bottom-left-radius:25px; border-top-left-radius:25px; ">
                        <img src="@lft.resim" alt="Card image cap" width="900px" height="350px" class="sola-kaydir" style="padding: 20px;">
                        <br />
                        <div class="paragraf_d" style="white-space: nowrap; text-overflow: ellipsis; width: 200px; overflow: visible; ">

                            <h4><p><b>Model Türü :</b> @lft.liftad</p></h4>
                            <h4><p><b>Lift Fiyatı :</b> @lft.fiyat TL</p></h4>
                            <h4><p><b>Bakım Periyodu :</b> @lft.bakimperiyot ay </p></h4>
                            <h4><p><b>Kar Tutarı:</b> @lft.kar TL </p></h4>
                            <h4><p><b>Tarih:</b> @lft.tarih.Day .@lft.tarih.Month .@lft.tarih.Year </p></h4>
                            <a href="/urunrecete/Index/@lft.modelid" class="btn btn-info">Ürün Detay</a>
                        </div>


                    </div>
                </div>
            }

        }
    </div>

    <div style="float:left">

        <div>
            <div class="w3-panel w3-card w3-white" style="border-radius:25px;">
                <div class="card-body">
                    

                    <form method="post" action="@Url.Action("tariharalik", "bayimagaza", new {bayiid = @ViewBag.bayiid})">

                        <label for="odeme"><h4><b>Tarih Aralığı</b></h4></label><br>

                        <select class="form-control" id="tariharaligi" name="tariharaligi">

                            <option value=1>1 Günlük</option>
                            <option value=2>1 Haftalık</option>
                            <option value=3>1 Aylık</option>
                            <option value=4>6 Aylık</option>
                            <option value=5>Tüm Zamanlar</option>
                        </select>
                        <br />

                        <input class="btn-success" type="submit" value="Listele">
                        <br />
                        <br />

                    </form>

                </div>
            </div>
        </div>
    </div>
    
</body>
</html>